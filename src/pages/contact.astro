---
import BaseLayout from "../layouts/BaseLayout.astro";
import LeftDecoration from "../components/LeftDecoration.tsx";
import Navbar from "../components/Navbar.tsx";

const contactLinks = [
    {
        title: "Linkedin",
        url: "https://www.linkedin.com/in/mathéo-picouleau-767812250"
    },
    {
        title: "GitHub",
        url: "https://github.com/idasrah"
    }
]

const pageTitle = "Contact";
---

<BaseLayout pageTitle={pageTitle}>
    <LeftDecoration />
    <div class="content">
        <div>
            <h1>Me contacter</h1>
            <p>On pourrait peut-être travailler ensemble. Contactez-moi !</p>
            <a class="mail" href="mailto:matheo.picouleau@hotmail.com">matheo.picouleau@hotmail.com</a>
            <div class="contactLinks">
                {
                    contactLinks.map((link) => (
                        <a href={link.url}>{link.title}</a>
                    ))
                }
            </div>
        </div>
        <Navbar client:load />
    </div>
</BaseLayout>


<style>
    body {
        display: flex;
        margin: 0;
        padding: 0;

    }

    .content {
        flex: 1;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 2rem;
    }

    .content > div {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    h1 {
        font-size: 4rem;
    }

    a {
        text-decoration: none;
        color: #ababab;
        width: fit-content;
    }

    .mail:hover {
        text-decoration: underline;
        color: white;
    }

    .contactLinks {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .contactLinks a {
        background-color: #272728;
        padding: 1rem;
        border-radius: 1rem;
        transition: 0.2s;
    }

    .contactLinks a:hover {
        background-color: #373738;
        color: white;
    }
</style>