---
import BaseLayout from "../layouts/BaseLayout.astro";
import PortfolioLayout from "../layouts/PortfolioLayout.astro";

const contactLinks = [
    {
        title: "Linkedin",
        url: "https://www.linkedin.com/in/mathéo-p-767812250"
    },
    {
        title: "GitHub",
        url: "https://github.com/idasrah"
    }
]

const pageTitle = "Contact";
const description = "Contactez Mathéo Picouleau pour vos projets de développement web. Disponible en freelance à Strasbourg pour créer votre site web ou application.";
const keywords = "contact développeur web, freelance strasbourg, devis site web, contact mathéo picouleau, développeur web disponible";

const structuredData = {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "mainEntity": {
        "@type": "Person",
        "name": "Mathéo Picouleau",
        "email": "contact@matheo-picouleau.fr",
        "url": "https://matheo-picouleau.fr",
        "sameAs": contactLinks.map(link => link.url)
    }
};
---

<BaseLayout pageTitle={pageTitle} description={description} keywords={keywords} structuredData={structuredData}>
    <PortfolioLayout contentStyles={{justifyContent: "flex-start"}}>
        <section class="contact">
            <h1>Travaillons ensemble</h1>
            <p>On pourrait peut-être travailler ensemble. Contactez-moi !</p>
            <a class="mail" href="mailto:contact@matheo-picouleau.fr" aria-label="Envoyer un email à Mathéo Picouleau">contact@matheo-picouleau.fr</a>
            <nav class="contactLinks" aria-label="Réseaux sociaux">
                {
                    contactLinks.map((link) => (
                            <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={`Visiter mon profil ${link.title}`}>{link.title}</a>
                    ))
                }
            </nav>
        </section>
    </PortfolioLayout>
</BaseLayout>


<style>
    .contact {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 0;
    }

    a {
        text-decoration: none;
        color: #ababab;
        width: fit-content;
    }

    .mail:hover {
        text-decoration: underline;
        color: white;
    }

    .contactLinks {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .contactLinks a {
        background-color: #272728;
        padding: 1rem;
        border-radius: 1rem;
        transition: 0.2s;
    }

    .contactLinks a:hover {
        background-color: #373738;
        color: white;
    }
</style>