---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavbarHome from "../components/NavbarHome.tsx";
import MeshBackground from "../components/MeshBackground.tsx";

const pageTitle = "Accueil";
const description = "Mathéo Picouleau - Développeur web full-stack freelance à Strasbourg. Spécialisé en React, TypeScript, Node.js et développement d'applications web modernes.";
const keywords = "mathéo picouleau, développeur web strasbourg, freelance react, développeur typescript, full-stack developer, création site web";
---
<BaseLayout pageTitle={pageTitle} description={description} keywords={keywords}>
    <div class="wrapper">
        <div class="background">
            <MeshBackground colors={["#3d2727", "#000"]} distortion={1} swirl={1} offsetX={0} offsetY={0} scale={2} rotation={0} speed={1.5} client:load />
        </div>
        <div class="content">
            <header class="top-section">
                <h1>
                    Mathéo<br />Picouleau.
                </h1>
                <div class="available">
                    <div id="pulse-circle"></div>
                    <p>Disponible en freelance</p>
                </div>
            </header>
            <NavbarHome client:load />
        </div>
    </div>
</BaseLayout>

<style>
    .wrapper {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    h1 {
        font-size: 10rem;
        font-weight: 700;
        letter-spacing: -0.05em;
        line-height: 1;
        margin-bottom: 1rem;
    }

    .available {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .available p {
        font-size: .9rem;
        font-weight: 200;
    }

    #pulse-circle {
        position: relative;
        width: .5rem;
        height: .5rem;
        border-radius: 50%;
        background-color: #fff;
    }

    #pulse-circle:after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: .5rem;
        height: .5rem;
        transform: translate(-50%, -50%);
        border-radius: 50%;
        background-color: #fff;
        opacity: 0.6;
        animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
        0% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.6;
        }
        70% {
            transform: translate(-50%, -50%) scale(4);
            opacity: 0;
        }
        100% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
        }
    }

    @media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
        h1 {
            font-size: 4rem;
        }
    }

    @media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait) {
        h1 {
            font-size: 6rem;
        }
    }
</style>