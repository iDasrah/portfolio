---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavbarHome from "../components/NavbarHome.tsx";
import MeshBackground from "../components/MeshBackground.tsx";

const pageTitle = "Portfolio";
---
<BaseLayout pageTitle={pageTitle}>
    <div class="wrapper">
        <div class="background">
            <MeshBackground colors={["#212121", "#000"]} distortion={1} swirl={1} offsetX={0} offsetY={0} scale={2} rotation={0} speed={1.5} client:load />
        </div>
        <div class="content">
            <h1>
                Math√©o<br />Picouleau
            </h1>
            <div>
                <div class="available">
                    <div id="pulse-circle"></div>
                    <p>Recherche un stage</p>
                </div>
                <NavbarHome client:load />
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .wrapper {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    h1 {
        font-size: 10rem;
        font-weight: 700;
        letter-spacing: -0.05em;
        line-height: 1;
    }

    .available {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .available p {
        font-size: .9rem;
        font-weight: 200;
    }

    #pulse-circle {
        position: relative;
        width: .5rem;
        height: .5rem;
        border-radius: 50%;
        background-color: #fff;
    }

    #pulse-circle:after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: .5rem;
        height: .5rem;
        transform: translate(-50%, -50%);
        border-radius: 50%;
        background-color: #fff;
        opacity: 0.6;
        animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
        0% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.6;
        }
        70% {
            transform: translate(-50%, -50%) scale(4);
            opacity: 0;
        }
        100% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
        }
    }
</style>