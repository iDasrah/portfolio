---
import BaseLayout from "../layouts/BaseLayout.astro";
import PortfolioLayout from "../layouts/PortfolioLayout.astro";

const skills = {
    languages: ["TypeScript", "C", "Java", "Python", "C#", "HTML", "CSS", "PHP", "SQL"],
    tech: ["React", "React Native", "TanStack Router", "NestJS", "Expo", "TailwindCSS", "Prisma"],
}

const pageTitle = "À propos de moi";
const description = "Développeur web full-stack et étudiant en informatique à Strasbourg. Passionné de programmation depuis 11 ans. Compétences en React, TypeScript, Node.js, développement mobile et plus.";
const keywords = "mathéo picouleau, développeur full-stack, compétences react, typescript expert, nestjs, react native, étudiant informatique strasbourg";

const structuredData = {
    "@context": "https://schema.org",
    "@type": "ProfilePage",
    "mainEntity": {
        "@type": "Person",
        "name": "Mathéo Picouleau",
        "jobTitle": "Développeur Web Full-Stack",
        "knowsAbout": [...skills.languages, ...skills.tech],
        "alumniOf": {
            "@type": "EducationalOrganization",
            "name": "Université de Strasbourg"
        },
        "description": "Développeur web full-stack passionné de programmation depuis 11 ans, spécialisé en React et TypeScript"
    }
};
---
<BaseLayout pageTitle={pageTitle} description={description} keywords={keywords} structuredData={structuredData}>
    <PortfolioLayout contentStyles={{justifyContent: "flex-start"}}>
        <article>
            <p>
                Je suis Mathéo, développeur web full-stack et étudiant en informatique à Strasbourg.<br />
                Depuis mes 11 ans, la programmation est ma passion. J'aime transformer des idées en applications concrètes et résoudre des problèmes techniques complexes.<br />
                Spécialisé en développement web moderne avec React et TypeScript, je m'intéresse également à la programmation graphique, au développement mobile et à la création de jeux vidéo.<br />
                Actuellement disponible pour des missions freelance.
            </p>
            <section>
                <h2>Compétences techniques</h2>
                <div class="skillsList">
                    <div>
                        <h3>Langages</h3>
                        { skills.languages.join(', ') }
                    </div>
                    <div>
                        <h3>Technologies</h3>
                        { skills.tech.join(', ') }
                    </div>
                </div>
            </section>
        </article>
    </PortfolioLayout>
</BaseLayout>

<style>
    .skillsList {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .skillsList div {
        display: flex;
        gap: 1rem;
    }

    p {
        line-height: 1.5;
        width: 70%;
        margin-bottom: 2rem;
    }

    h2 {
        margin-bottom: 1.5rem;
    }

    h3 {
        font-size: 1rem;
        font-weight: 600;
    }

    @media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
        p {
            width: 100%;
        }

        h2 {
            margin-bottom: 1.5rem;
        }

        .skillsList {
            flex-direction: row;
            flex-wrap: wrap;
        }

        .skillsList div {
            flex-direction: column;
            gap: .5rem;
        }
    }

    @media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait) {
        p {
            width: 100%;
        }
    }
</style>